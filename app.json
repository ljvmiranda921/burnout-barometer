{
    "name": "burnout-barometer",
    "env": {
        "BB_PROJECT_ID": {
            "description": "project ID for easy-access of resources",
            "required": true
        },
        "BB_TABLE": {
            "description": "database connection URL to store logs",
            "required": true
        },
        "BB_SLACK_TOKEN": {
            "description": "token generated by Slack for your app",
            "required": true
        },
        "BB_AREA": {
            "description": "IANA-compliant area for timezone",
            "default": "Asia/Manila",
            "required": true
        }
    },
    "options": {
        "allow-unauthenticated": true
    }
}
