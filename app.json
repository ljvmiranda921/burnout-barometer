{
    "name": "burnout-barometer",
    "env": {
        "BB_TABLE": {
            "description": "database connection URL to store logs",
            "required": true
        },
        "BB_SLACK_TOKEN": {
            "description": "token generated by Slack for your app",
            "required": true
        },
        "BB_AREA": {
            "description": "IANA-compliant area for timezone",
            "value": "Asia/Manila",
            "required": true
        },
        "BB_TWITTER_CONSUMER_KEY": {
            "description": "your Twitter consumer key",
            "required": true
        },
        "BB_TWITTER_CONSUMER_SECRET": {
            "description": "your Twitter consumer secret",
            "required": true
        },
        "BB_TWITTER_ACCESS_KEY": {
            "description": "your Twitter access key",
            "required": true
        },
        "BB_TWITTER_ACCESS_SECRET": {
            "description": "your Twitter access secret",
            "required": true
        }
    },
    "options": {
        "allow-unauthenticated": true
    }
}
